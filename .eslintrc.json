{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@wordpress/eslint-plugin/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": true
        }],
        "no-console": "off",
        "no-alert": "off",
        "no-plusplus": "off",
        "no-param-reassign": ["error", {
            "props": false
        }],
        "prettier/prettier": "error"
    },
    "plugins": [
        "prettier"
    ]
} 