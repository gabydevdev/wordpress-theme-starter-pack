{
  "name": "wptsp",
  "version": "1.0.0",
  "description": "WordPress Theme Starter Pack",
  "scripts": {
    "dev": "webpack serve --mode development & gulp watch",
    "build": "webpack --mode production && gulp build",
    "zip": "gulp zip",
    "version": "gulp version-sync && conventional-changelog -p angular -i CHANGELOG.md -s && git add . && git commit -m 'chore: version bump'",
    "lint:js": "eslint assets/js/src/**/*.js",
    "lint:js:fix": "eslint assets/js/src/**/*.js --fix",
    "lint:scss": "stylelint \"assets/scss/**/*.scss\"",
    "lint:scss:fix": "stylelint \"assets/scss/**/*.scss\" --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@wordpress/eslint-plugin": "^16.1.0",
    "babel-loader": "^9.1.3",
    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "gulp": "^4.0.2",
    "gulp-imagemin": "^8.0.0",
    "gulp-wp-pot": "^2.5.0",
    "gulp-zip": "^5.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "mini-css-extract-plugin": "^2.7.6",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-wordpress": "^21.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-prettier": "^3.1.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
